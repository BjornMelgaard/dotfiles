snippet gem
  gem '${1:TARGET}'

snippet     do
abbr        do ... end
  ${1}do
    ${2:TARGET}
  end

snippet     dovar
abbr        do |var| ... end
  ${1}do |${2:#:var}|
    ${3:TARGET}
  end

snippet pry
  require 'pry'; ::Kernel.binding.pry;

snippet screenshot
  save_and_open_screenshot

snippet concern
  extend ActiveSupport::Concern

  included do
    ${0:TARGET}
  end

snippet module
  module ${1:`substitute(expand('%:p:h:t'), '\v%(^(.)|_(.))', '\u\1\u\2', 'g')`}
    ${0:TARGET}
  end

